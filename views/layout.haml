-# coding: UTF-8
!!!
%html
  %head
    - if @page_title
      %title= "#{$site_title} - #{@page_title}"
      %meta(content="#{$site_title} | #{@page_title}" name="title")
      %meta(property="og:title" content="#{$site_title} | #{@page_title}")
    - else 
      %title= $site_title
      %meta(content="#{$site_title} - LLVM/Clangなどを解説する同人サークル" name="title")
      %meta(property="og:title" content=$site_title)
    - if @description
      %meta(content=@description name="description")
      %meta(property="og:description" content=@description)
    %meta(content="#{$keywords.join(', ')}" name='keywords')
    - if @active_menu == 'home' # top page
      %meta(property="og:type" content="website")
    - else
      %meta(property="og:type" content="article")
    - if @og_image
      %meta(property="og:image" content=@og_image)
      %meta(content="summary_large_image" name="twitter:card")
    %meta(property="og:url" content=@url)
    %meta(property="og:site_name" content=$site_title)
    %meta(property="og:locale" content="ja_JP")
    %link(rel='shortcut icon' href='/img/favicon.ico')
    -# %link(rel='stylesheet' href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css')
    -# %link(rel='stylesheet' href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap.no-icons.min.css')
    %link(rel='stylesheet' href='/css/bootstrap.min.css')
    %link(rel='stylesheet' href='/css/main.css')
    -# %link(rel='stylesheet' href='css/bootstrap-responsive.min.css')

  %body
    %header#head
      %div.container
      %div.navbar.navbar-fixed-top.navbar-inverse
        %div.navbar-inner
          %div.container
            -# %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            -#   %span.icon-bar
            -#   %span.icon-bar
            -#   %span.icon-bar
            %span<
              %a.brand{:href => "/"}<= $site_title
            %div.nav-collapse.collapse
              %ul.nav.pull-right
                - $menus.each do |menu|
                  - if @active_menu == menu[:symbol]
                    %li.active<
                      %a{:href=>"#{menu[:url]}"}<= menu[:display]
                  - else
                    %li<
                      %a{:href=>"#{menu[:url]}"}<= menu[:display]

    %div#contents
      =yield

      
    %footer#footer
      %div.container
        %small.pull-right<
          Copyright © 2013 #{$site_title}

    %script{:src => 'https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'}
    -# %script{:src => '//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js'}
    %script{:src => '/js/bootstrap.min.js'}
    %script{:src => '/js/moti.js'}
    %script{:async => "async", :charset => "utf-8", :src => "http://b.st-hatena.com/js/bookmark_button.js", :type => "text/javascript"}
    %script{:src => '/js/analytics.js'}
