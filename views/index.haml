-# coding: UTF-8

%div.container
  %div.container#display
    %div.span2.bs-docs-sidebar
      %ul.nav.nav-list.bs-docs-sidenav
        - @list.each do |catalog|
          %li.display-thumb<
            %a{:href=>"#{catalog[:url]}"}<
              %img.img-polaroid{:src => "#{catalog[:clip]}", :alt => "#{catalog[:title]} #{catalog[:subtitle]}"}
              %div.title{:style => 'display: none;'}< #{catalog[:title]}
              %div.subtitle{:style => 'display: none;'}< #{catalog[:subtitle]}

    %div.span9#display-main
      %a{:href => "#{@list[0][:url]}"}<
        %img.img-polaroid{:src => "#{@list[0][:clip]}", :alt => "#{@list[0][:title]} #{@list[0][:subtitle]}"}
        %h3.pull-right
          %div.row
            %div.pull-left.title<= @list[0][:title]
            %h4.pull-left.subtitle<= @list[0][:subtitle]


  %div.row.pull-right
    = haml :social_buttons
        
  %div.clearfix
  %div.row
    %div.span8.offset2#update
      %h2
        更新履歴
      %ul
        - $updates.each do |update|
          %li
            %div.row
              %div.span2{:style => "padding-left: 5px;"}= update[:date]
              %div.span6= update[:detail]
